{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": true,
    "isolatedModules": true
  }
}
